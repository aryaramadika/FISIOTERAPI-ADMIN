<%- include ../../partials/header.ejs%>
<%- include ../../partials/navbar.ejs%>
<%- include ../../partials/sidebar.ejs%>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Patient Data</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item "><a href="/category">Patient Data</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Edit Form "<%= category.name %>"</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/category/edit/<%= category._id %>?_method=PUT" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="name">Edit Name </label>
                      <input type="name" value="<%= category.name %>" name="name" class="form-control" id="exampleInputEmail1" placeholder="Enter Name" required>
                    </div>
                    <div class="form-group">
                      <label for="name">Edit Age </label>
                      <input type="number" value="<%= category.age %>" name="age" class="form-control" id="exampleInputEmail1" placeholder="Enter Age" required>
                    </div>
                    <div class="form-group">
                      <label for="name">Edit Address </label>
                      <input type="name" value="<%= category.address %>" name="address" class="form-control" id="exampleInputEmail1" placeholder="Enter Name" required>
                    </div>
                    <div class="form-group">
                      <label for="name">Edit Religion </label>
                      <input type="name" value="<%= category.religion %>" name="religion" class="form-control" id="exampleInputEmail1" placeholder="Enter Name" required>
                    </div>
                    <div class="form-group">
                      <label for="name">Edit Job </label>
                      <input type="name" value="<%= category.job %>" name="job" class="form-control" id="exampleInputEmail1" placeholder="Enter Name" required>
                    </div>
                  
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
            <!-- /.card -->


            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ../../partials/footer.ejs%>
<%- include ../../partials/js.ejs%>