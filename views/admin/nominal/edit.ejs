<%- include ../../partials/header.ejs%>
<%- include ../../partials/navbar.ejs%>
<%- include ../../partials/sidebar.ejs%>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item "><a href="/nominal">Nominal</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form edit "<%= nominal.coinName %>"</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                        <label>Coin Name</label>
                        <select class="form-control select2" style="width: 100%;" name="coinName" required>
                          <option selected="selected"> Choose Coins</option>
                          <option value="Bitcoin"
                            <% if(nominal.coinName === "Bitcoin"){%>    
                                selected
                            <% } %>   
                            > Bitcoin</option>
                          <option value="Etherium"
                            <% if(nominal.coinName === "Etherium"){%>    
                            selected
                            <% } %>   
                            >Etherium</option>
                          <option value="Doge"
                            <% if(nominal.coinName === "Doge"){%>    
                            selected
                            <% } %>  
                            >Doge</option>
                          <option value="Cardano" 
                            <% if(nominal.coinName === "Cardano"){%>    
                            selected
                            <% } %> > Cardano</option>
                          <option value="BNB"
                            <% if(nominal.coinName === "BNB"){%>    
                            selected
                            <% } %>  
                            >BNB</option>
                          <option value="SHIBA" 
                          <% if(nominal.coinName === "SHIBA"){%>    
                            selected
                            <% } %> 
                            > SHIBA</option>
                        </select>
                      </div>
                    <div class="form-group">
                      <label for="coinQuantity">Coin Nominal</label>
                      <input type="number" value="<%= nominal.coinQuantity %>" name="coinQuantity" class="form-control" id="coinQuantity" placeholder="Enter Amount of Coin " required>
                    </div>
                    <div class="form-group">
                      <label for="price">Coin Price</label>
                      <input type="number" value="<%= nominal.price %>" name="price" class="form-control" id="coinQuantity" placeholder="Enter Price of Coin " required>
                    </div>
                  
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
            <!-- /.card -->


            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ../../partials/footer.ejs%>
<%- include ../../partials/js.ejs%>